#!/bin/bash

###
# Simple script to launch the application.
# Start the server:
#   start
# Start the timeline updater daemon:
#   start run timeline-updater
# Start the server:
#   start run feed-updater
# Start tests:
#   start test
###
docker run \
    --rm \
    --name reader \
    --link redis:db \
    --env-file ./etc/reader.conf \
    -P \
    -i -t \
    ncarlier/reader $@

