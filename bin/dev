#!/bin/bash

###
# Simple script to get a development shell into the container.
# The development container need a volume:
#   docker run -v ~/src/reader:/opt/reader -v ~/var/reader:/var/opt/reader -name READER_VOLUMES busybox true
###
docker run \
    --rm \
    --name="reader" \
    --link redis:db \
    --volumes-from READER_VOLUMES \
    --env-file="./etc/reader.conf" \
    -i -t \
    --entrypoint="/bin/bash" \
    ncarlier/reader \
    -c /bin/bash

